<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragments.SignUpPhoneFragment"
    android:background="@drawable/gradient_image">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="372dp"
        android:layout_height="391dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/layout_custom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Sign In With Phone"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/edt_signIn_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            android:drawablePadding="10dp"
            android:hint="Phone Number" />

        <TextView
            android:id="@+id/tv_phone_signIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_is_incorrect"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="#CA1111"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>


        <Button
            android:id="@+id/btn_signIn_phone_continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_custom"
            android:text="Continue" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>
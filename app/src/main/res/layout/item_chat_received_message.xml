<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img_chat_received_message"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:contentDescription="@string/nav_header_desc"
        android:scaleType="centerCrop"
        app:riv_oval="true"
        android:background="@drawable/imageview_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"/>

    <TextView
        android:id="@+id/tv_content_received_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_item_received_message"
        android:padding="12sp"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/img_chat_received_message"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_chat_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_content_received_message"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>